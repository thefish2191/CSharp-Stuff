{
  "name": "dotnet-helper",
  "displayName": "Dotnet helper",
  "description": "vs code extension to help dotnet developers do dotnet stuff",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:csharp",
    "workspaceContains:*.cs",
    "workspaceContains:*.csproj"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnet-helper.itemGenerator",
        "title": "Create Class",
        "enablement": ""
      },
      {
        "command": "dotnet-helper.fileLocationSpotter",
        "title": "Locate this file"
      }
    ],
    "submenus": [
      {
        "id": "newItem",
        "label": "Get namespace"
      },
      {
        "id": "csOptions",
        "label": "cs options"
      },
      {
        "id": "JustRunIt",
        "label": "Test"
      }
    ],
    "menus": {
      "newItem": [
        {
          "group": "newClass",
          "command": "dotnet-helper.itemGenerator"
        }
      ],
      "csOptions": [
        {
          "group": "cs",
          "command": "dotnet-helper.fileLocationSpotter"
        }
      ],
      "explorer/context": [
        {
          "submenu": "newItem",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        },
        {
          "submenu": "csOptions",
          "group": "navigation",
          "when": "resourceExtname==.cs"
        },
        {
          "submenu": "JustRunIt",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.12",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "template-file": "^6.0.1"
  }
}
