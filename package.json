{
    "name": "csharp-stuff",
    "displayName": "C# Stuff",
    "description": "VSCode extension to help dotnet developers do dotnet stuff",
    "version": "0.0.7",
    "publisher": "TheFish2191",
    "repository": "https://github.com/thefish2191/CSharp-Stuff",
    "icon": "/resources/icons8-cascade-64.png",
    "engines": {
        "vscode": "^1.75.0"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "C#",
        "new C#",
        "dotnet",
        "new item",
        "new class",
        "new C# class",
        "C# Extensions"
    ],
    "preview": true,
    "activationEvents": [
        "onLanguage:csharp",
        "workspaceContains:**/*.cs",
        "workspaceContains:**/*.csproj"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "csharp",
                "path": "./snippets/snippets.json/"
            }
        ],
        "commands": [
            {
                "command": "csharp-stuff.createClass",
                "title": "Class"
            },
            {
                "command": "csharp-stuff.createStruct",
                "title": "Struct"
            },
            {
                "command": "csharp-stuff.createEnum",
                "title": "Enum"
            },
            {
                "command": "csharp-stuff.createInterface",
                "title": "Interface"
            },
            {
                "command": "csharp-stuff.createXML",
                "title": "XML"
            },
            {
                "command": "csharp-stuff.createJSON",
                "title": "JSON"
            },
            {
                "command": "csharp-stuff.createUnityScript",
                "title": "Unity Script"
            },
            {
                "command": "csharp-stuff.createCustomItem",
                "title": "Custom Item"
            },
            {
                "command": "csharp-stuff.openCustomItemTemplates",
                "title": "Open custom Item templates"
            },
            {
                "command": "csharp-stuff.rewriteCustomItemTemplates",
                "title": "Rewrite custom Item templates"
            }
        ],
        "submenus": [
            {
                "id": "Create Item",
                "label": "Create C# Item"
            }
        ],
        "menus": {
            "Create Item": [
                {
                    "group": "basicItem",
                    "command": "csharp-stuff.createClass"
                },
                {
                    "group": "basicItem",
                    "command": "csharp-stuff.createStruct"
                },
                {
                    "group": "basicItem",
                    "command": "csharp-stuff.createEnum"
                },
                {
                    "group": "basicItem",
                    "command": "csharp-stuff.createInterface"
                },
                {
                    "group": "DataItem",
                    "command": "csharp-stuff.createXML"
                },
                {
                    "group": "DataItem",
                    "command": "csharp-stuff.createJSON"
                },
                {
                    "group": "UnityItem",
                    "command": "csharp-stuff.createUnityScript"
                },
                {
                    "group": "UnityItem",
                    "command": "csharp-stuff.createCustomItem"
                }
            ],
            "explorer/context": [
                {
                    "submenu": "Create Item",
                    "group": "navigation",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.12",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vscode/test-electron": "^2.2.2",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "typescript": "^4.9.4"
    }
}